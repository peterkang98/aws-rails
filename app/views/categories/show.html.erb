<% provide(:title, "#{@category.name} 음악") %>
<h1><%= "#{@category.name} 음악" %></h1>
<div class="row">
  <div class="col-sm-8">
    <div class="list-group">
      <% @category.songs.each do |song| %>
        <%= link_to song, class: 'list-group-item' do %>
          <h3 class="desc"><%= song.title %></h3>
          <span>- <%= song.artist.original_name %></span>
        <% end %>  
      <% end %>
    </div>
  </div>
  <div class="col-sm-4">
    <%= render partial: 'layouts/categories', locals: { categories: @categories } %>
  </div>
</div>
