<% provide(:title, @artist.original_name) %>
<div class="well well-sm">
  <div class="row">
    <div class="col-xs-offset-3 col-sm-offset-0 col-xs-6 col-sm-4 col-md-3 col-lg-3">
      <%= image_tag @artist.img_location, class:"img-responsive img-circle" %>
    </div>
    <div class="col-xs-offset-3 col-sm-offset-0 col-xs-12 col-sm-8">
      <h1 class="desc title"><%= @artist.original_name %></h1>
    </div>
    <div class="col-xs-offset-3 col-sm-offset-0 col-xs-12 col-sm-8">
      <h2 class="desc artist"><%= @artist.songs.size %>곡</h2>
    </div>
  </div>
</div>
<h2>노래</h2>
<div class="row">
  <div class="col-sm-12">
    <div class="list-group">
      <% @artist.songs.each do |song| %>
        <%= link_to song, class: 'list-group-item' do %>
          <h3 class="desc"><%= song.title %></h3>
        <% end %>  
      <% end %>
    </div>
  </div>
</div>
