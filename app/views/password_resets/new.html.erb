<% provide(:title, "비밀번호 찾기") %>
<h1>비밀번호 찾기</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(url: password_resets_path, scope: :password_reset, local: true) do |f| %>
      <%= f.label :email, '이메일' %>
      <%= f.email_field :email, class: 'form-control' %>
      <%= f.submit "확인", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
